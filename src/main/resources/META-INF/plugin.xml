<idea-plugin>
    <id>dev.timothyw.treegen</id>
    <name>Tree Gen</name>
    <vendor>Timothy Washburn</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="GenerateDirectoryTree"
                class="dev.timothyw.treegen.GenerateTreeAction"
                text="Generate Directory Tree"
                description="Generate ASCII directory tree structure"
                icon="icons/generate.svg"
        >
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <add-to-group group-id="MainToolBar" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>
</idea-plugin>
